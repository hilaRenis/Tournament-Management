@page
@using BLL.Enum
@model Tournament_Web_Application.Pages.Teams.DeleteModel
@{
    ViewData["Title"] = "Delete Tournament";
}

<div class="content">
    <form class="form" method="post">
        <input type="hidden" asp-for="TeamDTO.Id">
        <div class="form-info">
            <h3>Delete team</h3>
            <br />
        </div>
        <div class="form-row">
            <div class="input-wrapper">
                <label for="">Team Name</label>
                <input asp-for="TeamDTO.Name" disabled>
            </div>
        </div>
        <div class="form-footer">
            <input type="submit" value="Delete">
            <a asp-page="/Teams/Team" class="back-btn">Go Back</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    }

