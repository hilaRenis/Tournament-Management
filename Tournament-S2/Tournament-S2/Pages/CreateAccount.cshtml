@page
@model Tournament_Web_Application.Pages.CreateAccountModel
@{
    ViewData["Title"] = "Sign Up";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Sora&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/signup.css">
</head>

<body>
    <div class="container">
        <div class="form-container">
            <form class="signup-form" method="post">  
                <div class="form-header">
                    <h3>Sign Up</h3>
                </div>
                <br/>
                @if(TempData["success"] != null){
                    <span class="message">Account created Successfully! Please <a asp-page="/Login">Login</a></span>
                }
                 @if(TempData["error"] != null)
                    {
                        <h3 style="color:red">@TempData["error"]</h3>
                    }
                 <br/>
                <div class="form-body">
                    <div class="input-wrapper">
                         <label asp-for="Name">Name:</label>
                         <input asp-for="Name" placeholder="Please enter your name">
                         <span asp-validation-for="Name"></span>
                    </div>
                    <div class="input-wrapper">
                        <label asp-for="LastName">LastName:</label>
                        <input asp-for="LastName" placeholder="Please enter your lastname">
                        <span asp-validation-for="LastName"></span>
                    </div>
                     <div class="input-wrapper">
                         <label asp-for="Username">Username:</label>
                         <input asp-for="Username" placeholder="Please enter your username">
                         <span asp-validation-for="Username"></span>
                    </div>
                    <div class="input-wrapper">
                         <label asp-for="Password">Password:</label>
                         <input type="password" asp-for="Password" placeholder="Please enter your password">
                         <span asp-validation-for="Password"></span>
                    </div>
                </div>
                <div class="form-footer">
                    <input type="submit" value="Sign Up">
                    <div class="footer-content">
                        <p>Already have an account?</p>
                        <a asp-page="/Login">Sign In</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</body>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
</html>